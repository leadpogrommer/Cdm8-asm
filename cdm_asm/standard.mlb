####################
# Define constants #
####################
*define/2
    asect   $2
$1:

#################################################
# Get/Put register value to/from memory address #
#################################################
*ldv/2 # Gets a value from memory addr ($1) to rn ($2)
    ldi     $2, $1
    ld      $2, $2

*stv/2 # Puts reg ($1) contents to memory addr ($2)
    unique  $1, temp
    push    ?temp
    ldi     ?temp, $2
    st      ?temp, $1
    pop     ?temp

