####################
# Interrupt enable #
####################
*ei/0
    push    r1
    ldi     r1, high(iefin')
    push    r1
    ldi     r1, low(iefin')
    push    r1
    ldi     r1, 0b10000000
    push    r1
    rti
iefin':
    pop     r1

#####################
# Interrupt disable #
#####################
*di/0
    push    r1
    ldi     r1, high(idfin')
    push    r1
    ldi     r1, low(idfin')
    push    r1
    ldi     r1, 0b00000000
    push    r1
    rti
idfin':
    pop     r1
