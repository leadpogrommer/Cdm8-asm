*tst/1
    move    $1, $1

*clr/1
    sub     $1, $1



*shl/1
    addc    $1, $1

##################
# Random numbers #
##################
*rannum/0
    dc      0xdf

*rannum/1
    rannum
    push    r1
    ldi     r1, $1
    and     r1, r0
    pop     r1

